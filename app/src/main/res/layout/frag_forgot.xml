<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription,Autofill,LabelFor,HardcodedText">

    <ImageView
        android:id="@+id/rl_bg_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/login_circle_bg"
        app:layout_heightPercent="85%sh" />

    <ImageView
        android:id="@+id/iv_forgot_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forgot_arrow"
        app:layout_heightPercent="12%sw"
        app:layout_marginPercent="3%sh"
        app:layout_widthPercent="12%sw" />

    <ImageView
        android:id="@+id/iv_forgot_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/forgot_logo"
        app:layout_heightPercent="10.8%sw"
        app:layout_marginTopPercent="20%sh"
        app:layout_widthPercent="50%sw" />

    <ImageView
        android:id="@+id/iv_forgot_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_forgot_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/forgot_lock"
        app:layout_heightPercent="15%sw"
        app:layout_marginTopPercent="15%sh"
        app:layout_widthPercent="15%sw" />

    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_forgot_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_forgot_lock"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="7%sh"
        app:layout_marginTopPercent="15%sh"
        app:layout_widthPercent="80%sw">

        <EditText
            android:id="@+id/et_forgot_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/register_input_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="50dp"
            android:paddingEnd="20dp"
            android:textColor="@color/color505050"
            android:textColorHint="@color/colorFFF"
            app:layout_textSizePercent="2.5%sh" />

        <ImageView
            android:id="@+id/iv_forgot_phoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/register_star"
            app:layout_heightPercent="45%h"
            app:layout_widthPercent="45%h" />

        <View
            android:id="@+id/v_forgot_phoneLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorFFF" />

    </com.hiber.tools.layout.PercentRelativeLayout>

    <!-- 按钮 -->
    <Button
        android:id="@+id/bt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bt_selector2"
        android:text="@string/forgot_confirm"
        android:textColor="@color/colorFFF"
        app:layout_marginBottomPercent="5%sh"
        app:layout_textSizePercent="2%sh"
        app:layout_widthPercent="80%sw" />

</com.hiber.tools.layout.PercentRelativeLayout>
